{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    {{ parent() }}

    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('category_index') }}" role="button">Back to list</a>

    <a class="btn btn-secondary" href="{{ path('category_edit', {'id': category.id}) }}" role="button">Edit</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
