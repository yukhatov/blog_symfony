{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    {{ parent() }}

    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ post.text }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ post.category }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ post.user }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('post_index') }}" role="button">Back to list</a>

    <a class="btn btn-secondary" href="{{ path('post_edit', {'id': post.id}) }}" role="button">Edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
